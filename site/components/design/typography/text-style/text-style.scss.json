{
  "text_styles": [
    {
      "name": "Body text",
      "description": "Used for paragraphs and longer text content",
      "based_on": "Arial",
      "mixins": [
        {
          "name": "font",
          "value": "arial-normal"
        },
        {
          "name": "typographic-scale",
          "value": "body-text"
        }
      ]
    },
    {
      "name": "Article title",
      "description": "The title of an article, page or something important",
      "based_on": "Arial",
      "mixins": [
        {
          "name": "font",
          "value": "arial-normal"
        },
        {
          "name": "typographic-scale",
          "value": "article-title"
        }
      ]
    },
    {
      "name": "Section title",
      "description": "Section delimiters. Usually contains just a single or a couple of words",
      "based_on": "Arial",
      "mixins": [
        {
          "name": "font",
          "value": "arial-normal"
        },
        {
          "name": "typographic-scale",
          "value": "small-text"
        },
        {
          "name": "colors",
          "value": "white-on-black"
        },
        {
          "name": "uppercase",
          "value": "1.2px"
        }
      ],
      "properties": [
        {
          "name": "display",
          "value": "inline-block"
        },
        {
          "name": "padding",
          "value": "0 $lem/4"
        },
        {
          "name": "margin",
          "value": "$lem auto"
        }
      ]
    },
    {
      "name": "Section subtitle",
      "description": "Section delimiter inside a section. Usually contains just a single or a couple of words",
      "based_on": "Arial",
      "mixins": [
        {
          "name": "font",
          "value": "arial-normal"
        },
        {
          "name": "typographic-scale",
          "value": "small-text"
        },
        {
          "name": "colors",
          "value": "white-on-gray"
        },
        {
          "name": "uppercase",
          "value": "1.2px"
        }
      ],
      "properties": [
        {
          "name": "display",
          "value": "inline-block"
        },
        {
          "name": "padding",
          "value": "0 $lem/4"
        },
        {
          "name": "margin",
          "value": "$lem auto"
        }
      ]
    }
  ]
}
